{
  "source": ["tokens/**/*.json"],
  "platforms": {
    "css": {
      "transformGroup": "css",
      "files": [
        {
          "destination": "css/variables.css",
          "format": "css/variables"
        }
      ]
    },
    
    "sass": {
      "transformGroup": "sass",
      "files": [
        {
          "destination": "sass/variables.css",
          "format": "sass/variables"
        }
      ]
    }
  }
}
